<div class="container py-5" style="max-width:460px">
  <h1 class="h4 mb-4 text-center">基本設定</h1>
  <%= render "shared/error_messages", resource: resource %>
  <%= form_with model: resource, url: registration_path(resource_name), method: :patch do |f| %>
    <%= render "form", f: f %>
    <div class="mb-4">
      <%= f.label :current_password, "現在のパスワード", class: "form-label" %>
      <%= f.password_field :current_password,
            class: "form-control",
            autocomplete: "current-password",
            required: true %>
    </div>
    <%= f.submit "更新する", class: "btn btn-primary w-100" %>
  <% end %>
</div>